<UserControl x:Class="fe_hunt_gui.StartingDocker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:fe_hunt_gui"
             mc:Ignorable="d">

    <Border Background="{DynamicResource BackgroundBrush}" BorderThickness="0" HorizontalAlignment="Center" VerticalAlignment="Center" Width="800" Height="300">
        <!-- Text Field -->
        <TextBox HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,150,0,0" Text="Docker is currently Starting. Please Wait." Background="{DynamicResource BackgroundBrush}" BorderThickness="0" FontSize="20"/>
    </Border>

</UserControl>
