<UserControl x:Class="fe_hunt_gui.StartingDocker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:fe_hunt_gui"
             mc:Ignorable="d">

    <Grid>
        <!-- Semi-transparent Rectangle to dim the background -->
        <Rectangle Fill="Black" Opacity="0.5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

        <Border BorderThickness="0" HorizontalAlignment="Center" VerticalAlignment="Center" Width="800" Height="450">
            <!-- Text Field -->
            <TextBox HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,210,0,0" 
                     Text="Docker is currently Starting. Please Wait." Background="Transparent" BorderBrush="Transparent"  
                     BorderThickness="0" FontSize="30" FontWeight="Bold"/>
        </Border>
    </Grid>

</UserControl>
