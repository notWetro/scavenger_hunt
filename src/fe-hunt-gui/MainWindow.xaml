<Window x:Class="fe_hunt_gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:fe_hunt_gui"
        mc:Ignorable="d"
        Title="Hunt" Height="450" Width="800" Background="{DynamicResource BackgroundBrush}" ResizeMode="NoResize" WindowStyle="None"  MouseLeftButtonDown="Window_MouseLeftButtonDown" WindowStartupLocation="CenterScreen">
    <Grid x:Name="GUIGrid">

        <!-- Define the Row -->
        <!--<Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>-->

        <!-- Define the columns -->
        <Grid.ColumnDefinitions >
            <!--ColumnDefinition Width="15*" Name="TitleGrid"/-->
            <ColumnDefinition Width="*" Name="EditorColumn"/>
            <ColumnDefinition Width="*" Name="ParticipationColumn"/>
            <ColumnDefinition Width="*" Name="PlayColumn"/>
        </Grid.ColumnDefinitions>

        <!-- Titlebar -->
        <local:Titlebar x:Name ="TitleBar" Grid.ColumnSpan="3" VerticalAlignment="top"/>


        <!-- Define the Buttons -->
        <Button Name="Editor_Button" Grid.Column="0" Height="150" Width="150" HorizontalAlignment="Center" Background="{DynamicResource ButtonBackroundBrush}" Margin="0,142,0,142" Click="Editor_Button_Clicked">
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="Start Editor" />
        </Button>

        <Button Name="Participation_Button" Grid.Column="1" Height="150" Width="150" HorizontalAlignment="Center" Background="{DynamicResource ButtonBackroundBrush}" Margin="0,142,0,142" Click="Web_Game_Button_Clicked">
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="Start Game" />
        </Button>

        <Button Name="Play_Hunt_Button" Grid.Column="2" Height="150" Width="150" HorizontalAlignment="Center" Background="{DynamicResource ButtonBackroundBrush}" Margin="0,142,0,142" Click="Options_Button_Clicked">
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="Options" />
        </Button>


        <local:StartingDocker x:Name="StartDocker" Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Hidden"/>
        
        <local:LoadingCircle x:Name="LoadingCircle" Grid.Column="0" Height="100" Width="100" Duration="0:0:2" SpinnerColor="DarkGray" Visibility="hidden"/>

        <Button Name="Exit_Button" Grid.Column="0" Height="20" Width="50" HorizontalAlignment="Center" Background="{DynamicResource ButtonBackroundBrush}" Margin="0,120,0,10" Click="Exit_Button_Clicked" Visibility="Hidden">
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Bottom" Text="Exit" />
        </Button>


    </Grid>
</Window>
